<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaGeneratorPersona.Views.NavigationItemView"
             BackgroundColor="{AppThemeBinding Light={StaticResource ItemBackgroundColor}, Dark={StaticResource ItemBackgroundColorDark}}">
 
   <ContentView.ControlTemplate>
        <ControlTemplate>
            <HorizontalStackLayout Padding="0, 2">
                <Image Source="{TemplateBinding Icon}"
                       Aspect="Center"
                       Margin="4, 0, 8, 0"/>
                <Label Text="{TemplateBinding Header}"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>

